<view>
  <view class='tab'>
    <view class="{{currentTab==0 ? 'on' : ''}}" data-current="0" bindtap="swichNav">我参加的</view>
    <view class="{{currentTab==1 ? 'on' : ''}}" data-current="1" bindtap="swichNav">我创建的</view>
    <view class="{{currentTab==2 ? 'on' : ''}}" data-current="2" bindtap="swichNav">群活动</view>
    
  </view>
  <view>
    <view wx:if='{{currentTab==0}}'>
      <view wx:for="{{joinData}}" data-activityid="{{item.id}}" bindtap='gotoEnroll' class='item'>
        <view style='font-weight:bold;'>
          {{item.title}}
        </view>
        <text style='font-size:26rpx;color:#666;'>{{item.day}} {{item.hour}}</text>
      </view>
    </view>
    <view wx:if='{{currentTab==1}}'>
      <view wx:for="{{createData}}" data-activityid="{{item.id}}" bindtap='gotoEnroll' class='item'>
        <view style='font-weight:bold;'>
          {{item.title}}
        </view>
        <text style='font-size:26rpx;color:#666;'>{{item.day}} {{item.hour}}</text>
      </view>
    </view>
  </view>
  <view wx:if='{{currentTab==2}}'>
    <view wx:if='{{groupData==""}}' style='color:gray;padding:40rpx 0;text-align:center;'>从群内打开该小程序才能查看到群活动</view>
    <view wx:for="{{groupData}}" data-activityid="{{item.id}}" bindtap='gotoEnroll' class='item'>
      <view style='font-weight:bold;'>
        {{item.title}}
      </view>
      <text style='font-size:26rpx;color:#666;'>{{item.day}} {{item.hour}}</text>
    </view>
  </view>

  <view direction="all" class='creat' bindtap='creat'>
    创建活动
  </view>

</view>