.card {
  width: 90%;
  margin: 30rpx auto;
  background: #fff;
  padding: 30rpx;
  border-bottom: 1px solid #ccc;
  position: relative;
  box-shadow: 2px 3px 10px #999;
}
.card>view{
  margin-top: 10rpx;
}

.ok {
  position: fixed;
  bottom: 20rpx;
  background: #338fff;
  color: #fff;
  width: 80%;
  letter-spacing: 2rpx;
  margin: 0 10%;
}

.joinerList {

  margin-top: 20rpx;
  background: #fff;
  padding: 20rpx 40rpx;
  align-items: center;
  
}

.enrollToast {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  font-size: 36rpx;
}

.enrollToast .toast {
  position: absolute;
  width: 100%;
  height: 100%;
  opacity: 0.8;
  background: #666;
  z-index: 100;
}

.enrollToast .content {
  position: relative;
  top: 30%;
  left: 10%;
  background: #fff;
  width: 80%;
  height: 40%;
  z-index: 200;
  border-radius: 10rpx;
  display: flex;
  flex-direction:column;
  justify-content:space-between;
}
.toast-infor view{
  display: flex;
  border-bottom: 1px solid #efefef;
  height: 80rpx;
  line-height: 80rpx;
  color:#666;
}
.toast-infor view input{
  height: 80rpx;
  line-height: 80rpx;
  color: #333;
  padding-left: 20rpx;
}
.enrollToast .toast-button {
  display: flex;
  justify-content: space-between;
  border-top: 1px solid #ccc;
  height: 100rpx;
  line-height: 100rpx;
}
.enrollToast .toast-button view{
  width: 50%;
  text-align: center;
}