page {
  background: #e6e6e6;
}

.bg-title {
  font-size: 60rpx;
  font-weight: bold;
  color: #d81e06;
  font-family: "黑体";
  text-align: center;
  margin: 20rpx;
}

.bg-infor {
  text-align: center;
}

.bg-star {
  display: flex;
  justify-content: space-around;
  align-items: center;
}

.bg-star view {
  width: 80%;
  height: 6rpx;
  background: #2F4F4F;
}

.title {
  font-size: 40rpx;
  font-weight: bold;
  text-align: center;
  margin: 20rpx 0;
  padding: 20rpx;
  border-bottom: 1px solid #ccc;
}

.textContent {
  width: 100%;
}

.share-button {
  width:100%;
  background:#090723;
  border-radius:0;
  color:white;
}

.share {
  position: fixed;
  bottom: 0rpx;
  background: #fff; 
  color: #fff; 
  width: 100%; 
  letter-spacing: 2rpx;
  display:flex; 
  flex-direction:row;
}

.option {
  padding: 10rpx 40rpx;
  padding-bottom: 20rpx;
  box-sizing: border-box;
  background: #fff;
  margin-top: 20rpx;
  display:flex;
  flex-direction:row;
}
.option-image{
  height:120rpx;
  width:120rpx;
  border-radius:50%;
}
.option-info{
  margin-left:30rpx;
  margin-top:20rpx
}
.right{
  position: absolute;
  right: 4%;
  top: 4%;
  width: 150rpx;
  height: 100rpx;
  background-size: cover;
  z-index:2;
}
.right view{
  display:flex; 
  flex-direction:row;
  justify-content:center;
}
.right-share{
  border-radius:50%;
  background-color:#64b532;
  width:70rpx; 
  height:70rpx;
  display:flex;
  align-items:center;
  justify-content:center;
}
.right-home{
  border-radius:50%;
  background-color:#16c2c2;
  width:70rpx; 
  height:70rpx;
  display:flex;
  align-items:center;
  justify-content:center;
  margin-left:10rpx;
}

